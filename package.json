{
    "name": "planit",
    "descripton": "A time management tool for post-secondary students.",
    "repository": {"url": "https://github.com/af3rr/planit"},
    "homepage": "./",
    "version": "0.1.0",
    "author": {
        "name": "AJ Ferron",
        "email": "aferron@uoguelph.ca"
    },
    "private": true,
    "main": "public/electron.js",
    "build": {
        "appId": "com.af3rr.planit",
        "productName": "Planit",
        "files": [
            "build/**/*",
            "node_modules/**/*"
        ],
        "directories": {
            "buildResources": "assets"
        },
        "mac": {
            "category": "public.app-category.productivity"
        },
        "dmg": {
            "contents": [
                {
                    "x": 100,
                    "y": 135
                },
                {
                    "x": 300,
                    "y": 135,
                    "type": "link",
                    "path": "/Applications"
                }
            ]
        }
    },
    "scripts": {
        "dev": "concurrently \"BROWSER=none npm start\" \"wait-on http://localhost:3000 && electron .\"",
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "postinstall": "electron-builder install-app-deps",
        "preelectron-pack": "npm run build",
        "electron-pack": "electron-builder -m"
    },
    "dependencies": {
        "@testing-library/jest-dom": "^4.2.4",
        "@testing-library/react": "^9.5.0",
        "@testing-library/user-event": "^7.2.1",
        "devtron": "^1.4.0",
        "electron-is-dev": "^1.2.0",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-scripts": "3.4.1"
    },
    "devDependencies": {
        "concurrently": "^5.2.0",
        "electron": "^8.2.5",
        "electron-builder": "^22.6.0",
        "wait-on": "^4.0.2"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
